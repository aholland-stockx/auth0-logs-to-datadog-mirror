{
  "extends": ["eslint:recommended"],
  "plugins": ["import"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": ["error", "always"]
  },
  "overrides": {
    "files": "test/*.js",
    "env": {
      "jest": true
    }
  }
}
